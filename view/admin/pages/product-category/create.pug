extends ../../layout/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block main
    +alert-error(3000)
    if(role.permissions.includes('products-category_create')) 

        h1 Them moi danh muc san pham
        form(
            action=`${preFixAdmin}/product-category/create`
            id="form-create-product-category"
            method="POST"
            enctype="multipart/form-data"
        )

            div(
                class="from-group"
                )
                label(
                    for="title"
                    class="form-label"
                ) Tieu de 
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                )

            div(
                class="from-group"
                )
                label(
                    for="parent_id"
                    class="form-label"
                ) Danh muc cha 
                
                select(
                    class="form-control"
                    id="parent_id"
                    name="parent_id"
                )
                    option(value="") -- Chon danh muc cha --
                    if(productCategory)
                        +select-tree(records)

            div(
                class="from-group"
                )
                label(
                    for="desc"
                    class="form-label"
                ) Mo ta 
                textarea(
                    class="form-control"
                    id="desc"
                    name="description"
                    rows="5"
                )

            div(
                class="from-group"
                upload-image
                )
                label(  
                    for="thumbnail"
                    class="form-label"
                ) Hinh anh
                input(
                    type="file"
                    class="form-control-file"
                    id="thumbnail"
                    name="thumbnail"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    src=""
                    upload-image-preview
                    width="50px"
                )
            div(
                class="from-group"
                )
                label(
                    for="position"
                    class="form-label"
                ) Vi tri san pham
                input(
                    type="number"
                    class="form-control"
                    id="position"
                    name="position"
                )
            div(
                class="from-group form-check form-check-inline"
                )

                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked
                )
                label(
                    for="statusActive"
                    class="form-check-label"
                ) Hoat dong
            div(
                class="from-group form-check form-check-inline"
                )

                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInactive"
                    name="status"
                    value="inactive"
                )
                label(
                    for="statusInactive"
                    class="form-check-label"
                ) Dung hoat dong
            div(
                class="from-group mt-3"
                )
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Tao danh muc san pham



        script(src="/admin/js/product.js") 