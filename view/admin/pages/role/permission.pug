extends ../../layout/default.pug
include ../../mixins/alert.pug
block main
    h1.mb-0 Phân quyền
    +alert(3000)
    if(records)
        div(data-records=records)
    
        div(class="text-right")
            button(class="btn btn-primary mb-3"
                type="submit" 
                button-submit) Cập nhật 

        table(class="table table-hover table-sm"
            permission-table)
            thead
                tr
                    th Tính năng
                    each item in records
                        th.text-center=item.title 

            tbody
                // row that holds role ids (hidden inputs) - use _id if available
                tr(data-name="id" class="d-none")
                    td
                    each item in records
                        td.text-center
                            input(type="hidden" value=(item._id || item.id) name="roleId")
                            // optionally show a short id for debugging
                            span.small.text-muted= (item._id || item.id)
                tr
                    td(colspan="4")
                        b Danh mục sản phẩm
                tr(data-name="products-category_view")
                    td Xem
                    each item in records
                        td.text-center
                            input(type="checkbox" )

                tr(data-name="products-category_create")
                    td Thêm mới
                    each item in records
                        td.text-center
                            input(type="checkbox" )
                tr(data-name="products-category_edit")
