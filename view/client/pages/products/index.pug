extends ../../layout/default.pug
include ../../mixin/box-head.pug
block main
    .container.my-3
        .row
            .col-12
                +box-head('Danh sách sản phẩm')
        .row
          each item in products
            .col-4.mb-3
                .product-item
                    .inner-image
                        img(src=item.thumbnail , alt=item.title)
                    .inner-content
                        h3.inner-title 
                        a(href=`/products/${item.slug}`) #{item.title}
                        .inner-price-new #{item.price - (item.price * item.discountPercentage / 100).toFixed(0)}$
                        .inner-price-old #{item.price}$
                        .inner-discount #{item.discountPercentage}%
                        .inner-stock Còn lại: #{item.stock} sản phẩm