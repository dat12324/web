include ../mixin/sub-menu.pug
header.header
    .container
        .row.align-items-center
            .col-3
                .inner-logo 
                    a(href="/")
                        img(src="/images/anh.png", alt="Logo")
            .col-9
                .inner-menu 
                    ul.menu-list
                        li
                            a(href="/") Home
                        li(class="sub-menu")
                            - const pathProduct = "/products"
                            a(href=pathProduct) Products
                            +sub-menu(newCategory, pathProduct)
                                // Example of generated structure:

                    
                    // include menu toggle script to support touch and better hover
                    script(src="/js/menu-toggle.js")

